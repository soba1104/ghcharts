#! /usr/bin/env padrino runner
# vim:set ft=ruby:

repo = ARGV.last
token = Config[:token]
endpoint = Config[:endpoint]
#Octokit.configure{|c| c.api_endpoint = endpoint }
client = Octokit::Client.new(:access_token => token)

stats = client.contributors_stats(repo)
users = {}
activities = []
repository = Repository.new(:name => repo)
begin
  repository.save!
rescue
  repository = Repository.where(name: repo).first
  raise unless repository
end
stats.each do |stat|
  weeks = stat[:weeks]
  author = stat[:author][:login]

  puts "------ #{author} ------"
  raise if users[author]
  u = User.new(:name => author)
  users[author] = u
  begin
    u.save!
  rescue
    u = User.where(name: author).first
    raise unless u
  end
  act = []
  weeks.each do |w|
    t = Time.at(w[:w])
    a = w[:a]
    d = w[:d]
    c = w[:c]
    act << Activity.new(
      :user => u,
      :repository => repository,
      :time => t,
      :add => a,
      :del => d,
      :commit => c
    )
  end
  act.each do |a|
    puts a.inspect
    a.save!
  end
end
